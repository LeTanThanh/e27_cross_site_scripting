<div class="container">
  <h2>Posts</h2>

  <% @posts.each do |post| %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= post.title %> (<%= pluralize post.comments.size, "comment" %>) </div>
      <div class="panel-body"><%= post.content %></div>
    </div>
  <% end %>
</div>
